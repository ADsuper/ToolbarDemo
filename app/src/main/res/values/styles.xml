<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 溢出菜单图标颜色，可以自己设置成任意的颜色-->
        <item name="colorControlNormal">@android:color/white</item>

    </style>
    <!--仿支付宝标题栏用-->
    <style name="ActionMenuTextAppearance" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/colorAccent</item><!--右侧 menu 字体颜色-->
        <item name="android:textSize">18sp</item><!--  右侧 menu 字体大小-->
        <item name="android:textStyle">normal</item><!--  右侧 menu 字体样式-->
    </style>

    <style name="right_menu_main" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textSize">20sp</item><!--PopupMenu 字体大小-->
        <item name="android:textColor">@color/colorAccent</item><!--PopupMenu 字体颜色-->
        <item name="android:background">@color/colorPrimary</item>
        <item name="actionOverflowMenuStyle">@style/menu_main_overflow</item>
    </style>
    <!--右侧 popupmenu 样式-->
    <style name="menu_main_overflow" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:textSize">20sp</item><!--PopupMenu 字体大小-->
        <item name="android:textColor">@color/colorAccent</item><!--PopupMenu 字体颜色-->
        <item name="android:background">@color/colorPrimary</item><!--PopupMenu 背景色-->
        <item name="overlapAnchor">false</item><!--PopupMenu 是否显示在标题栏下方-->
    </style>

</resources>
